<div class="text-center"> 
  <h1>US Citzenship</h1>
  <%= image_tag("Seal_of_the_US_Department_of_Homeland_Security.png", :class => "logo") %>
</div>

<div class="row-fluid">
  <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 content-container">
    <ul>
      <% @questions.each do |question| %>
        <li class="question"><%= question.question_number %>: <span class="english-question"><%= question.question_text %></span><span class="spanish-question hide"><%= question.spanish_question_text %></span></li>
        <ul class="answers">
          <% for i in 0..(question.answers.length - 1) %>
            <li><span class="english-answer"><%= question.answers[i] %></span><span class="spanish-answer hide"><%= question.spanish_answers[i] %></span></li>
          <% end %>
        </ul>
      <% end %>
    </ul>
    <div class="text-center">
      <%= will_paginate @questions, :class => "paginate-btns" %>
      <button class="translate-btn">Translate</button>
    </div>
  </div>
</div>


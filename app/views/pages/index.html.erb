<div class="text-center"> 
  <h1>US Citzenship</h1>
  <%= image_tag("Seal_of_the_US_Department_of_Homeland_Security.png", :class => "logo") %>
</div>

<div class="row-fluid">
  <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 content-container">
    <% @questions.each do |question| %>

      <!-- English Version -->
      <ul class="list-unstyled" id="english-version">
        <li class="text-center"><audio controls><source src="<%= question.english_audio %>" type="audio/mpeg"></audio></li>
        <li class="question-number"><%= question.question_number %>:</li>
        <li class="text-container">
          <span class="question-text"><%= question.question_text %></span>
          <br />
          <br />
          <% question.answers.each do |answer| %>
            <span class="answer-text"><%= answer %></span>
          <% end %>
        </li>
      </ul>

      <!-- Spanish Version -->
      <ul class="list-unstyled hide" id="spanish-version">
        <li class="text-center"><audio controls><source src="<%= question.spanish_audio %>" type="audio/mpeg"></audio></li>
        <li class="question-number"><%= question.question_number %>:</li>
        <li class="text-container">
          <span class="question-text"><%= question.spanish_question_text %></span>
          <br />
          <br />
          <% question.spanish_answers.each do |answer| %>
            <span class="answer-text"><%= answer %></span>
          <% end %>
        </li>
      </ul>
    <% end %>
  </div>

  <!-- Buttons -->
  <div class="col-lg-12 text-center buttons-container">
    <input class="translate-btn" type="checkbox" checked data-toggle="toggle" data-on="English" data-off="Spanish">
    <%= will_paginate @questions, :class => "paginate-btns" %>
  </div>
</div>

